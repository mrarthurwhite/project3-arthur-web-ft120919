<p id="notice"><%= notice %></p>

<h1>Registrations</h1>

<table class="striped">
  <thead>
    <tr>
      <th>Rsvp</th>
      <th>Comment</th>
      <th>User</th>
      <th>Event</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @registrations.each do |registration| %>
      <tr>
        <td><%= registration.rsvp %></td>
        <td><%= registration.comment %></td>
        <td><%= registration.user_id %></td>
        <td><%= registration.event_id %></td>
        <td><%= link_to 'Show', registration %></td>
        <td><%= link_to 'Edit', edit_registration_path(registration) %></td>
        <td><%= link_to 'Destroy', registration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', events_path ,  class:'waves-effect  blue lighten-3 btn-small' %>
