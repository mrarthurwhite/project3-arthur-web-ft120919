<p id="notice"><%= notice %></p>

<h1>Users List</h1>

<table class="striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user,  class:'waves-effect  blue lighten-3 btn-small' %></td>
        <td><%= link_to 'Edit', edit_user_path(user),  class:'waves-effect  blue lighten-3 btn-small' %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' },  class:'waves-effect  blue lighten-3 btn-small' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path ,  class:'waves-effect  blue lighten-3 btn-small'%>
