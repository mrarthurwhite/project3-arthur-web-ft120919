
<% if @user && @user.errors.any? %>
  <h4 style="color: red;"><%= @user.errors.full_messages.to_sentence %></h4>
<% end %>

<%= form_tag signin_path, method: "post" do %>
  <div class="field">
    <%= label_tag "email", "Email" %>
    <%= text_field_tag "email" %>
  </div>
  <div class="field">
    <%= label_tag "password", "Password" %>
    <%= password_field_tag "password" %>
  </div>

  <%= submit_tag "Sign In", class:"waves-effect  blue lighten-3 btn-small" %>
<% end %>