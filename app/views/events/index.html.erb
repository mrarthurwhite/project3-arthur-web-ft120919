<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table class="striped">
  <thead>
    <tr>
      <th>Status</th>
      <th>Status</th>
      <th><div  align="center">Title</div></th>
      <th>Attendees</th>
      <th><div  align="center">Meeting time</div></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td>
          <div align="left">
          <%=  "RSVP: #{event.rsvp(current_user)}" if event.rsvped?(current_user) %>
          <%=  "Host" if event.isHost(current_user)%>
          </div>
        </td>
        <td><%= event.title %></td>
        <td><%= event.location %></td>

        <td><%= event.meeting_time %></td>
        <td>
          <% if event.rsvped?(current_user) %>
             <%= link_to 'Edit RSVP', event %>
          <% elsif !event.isHost(current_user) %>
            <%= link_to 'RSVP', new_registration_path(event) %>
          <% else %>
            <%= link_to 'Details', event %>
          <% end %>
        </td>
        <td><%= link_to 'Edit', edit_event_path(event)  , class:'waves-effect  blue lighten-3 btn-small' if event.isHost?(current_user)  %></td>
        <td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } , class:'waves-effect  blue lighten-3 btn-small'   if event.isHost?(current_user)   %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path , class:'waves-effect  blue lighten-3 btn-small'%>
