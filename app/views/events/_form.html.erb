<%= form_for @event do |form| %>
  <% if @event.errors.any? %>
    <div id="error_explanation" class="red-text text-darken-4" >
      <h7><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h7>

      <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field<%= ' field_with_errors' if @event.errors[:title].any? %>">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field<%= ' field_with_errors' if @event.errors[:location].any? %>">
    <%= form.label :location %>
    <%= form.text_field :location %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field<%= ' field_with_errors' if @event.errors[:meeting_datetime].any? %>">
    <%= form.label "Meeting Time" %>
    <%= form.datetime_field :meeting_datetime %>
  </div>


  <div class="actions">
    <%= form.submit  :class=>'waves-effect  blue lighten-3 btn-small' %>
  </div>
<% end %>
